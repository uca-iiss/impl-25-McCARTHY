pipeline {
    agent none
    stages {
        stage('Build') {
            agent {
                docker {
                    image 'arevalo8/custom-lambdas'
                }
            }
            steps {
                sh 'python -m py_compile app/procesador.py'
                sh 'python -m py_compile app/logs.py'
            }
        }
        stage('Test') {
            agent {
                docker {
                    image 'arevalo8/custom-lambdas'
                }
            }
            steps {
                sh '''
                    export PYTHONPATH=$(pwd):$PYTHONPATH
                    py.test --verbose --junit-xml test-reports/results.xml tests/test_procesador.py
                '''
            }
            post {
                always {
                    junit 'test-reports/results.xml'
                }
            }
        }
        stage('Deliver') {
            agent {
                docker { 
                    image 'arevalo8/custom-lambdas'
                }
            }
            steps {
                sh '''
                    pyinstaller --onefile app/procesador.py
                '''
            }
            post {
                success {
                    sh 'ls -la dist/'
                    archiveArtifacts 'dist/procesador'
                }
            }
        }
    }
}

