pipeline {
    agent any

    environment {
       IMAGE_NAME = "python:3.12-slim"
       APP_DIR = "temas/lambdas/python"
       DOCKER_HOST = "unix:///var/run/docker.sock"
   }


    stages {
        stage('Preparar') {
            steps {
                echo 'Verificando entorno Docker y repositorio...'
                sh "docker version"
            }
        }

        stage('Instalar dependencias') {
            steps {
                echo 'Instalando dependencias...'
                sh """
		    docker run --rm -v "\$PWD":/app -w /app/${APP_DIR} ${IMAGE_NAME} \
		    sh -c 'ls -l . && echo "---" && cat requirements.txt && echo "---" && pip install -r requirements.txt'
		"""


            }
        }

        stage('Tests') {
            steps {
                echo 'Ejecutando tests...'
                sh """
                    docker run --rm -v "\$PWD":/app -w /app/${APP_DIR} ${IMAGE_NAME} \
                    python3 -m unittest discover tests
                """
            }
        }

        stage('Build') {
            steps {
                echo 'Empaquetando aplicaci√≥n...'
                sh """
                    docker run --rm -v "\$PWD":/app -w /app/${APP_DIR} ${IMAGE_NAME} \
                    python3 setup.py sdist
                """
            }
        }
    }

    post {
        always {
            echo 'Pipeline finalizado.'
        }
    }
}

