pipeline {
    agent any

    environment {
        IMAGE_NAME = "python:3.12-slim"
        WORKDIR = "temas/lambdas/python"
    }

    stages {
        stage('Preparar') {
            steps {
                echo 'Verificando entorno Docker y repositorio...'
                sh "docker version"
            }
        }

        stage('Verificar archivos') {
            steps {
                echo 'Listando archivos en el workspace...'
                sh 'find . -type f'
            }
        }

        stage('Instalar dependencias') {
            steps {
                echo 'Instalando dependencias...'
                sh """
                    docker run --rm -v "\$PWD/${WORKDIR}":/app -w /app ${IMAGE_NAME} \
                    pip install -r requirements.txt
                """
            }
        }

        stage('Tests') {
            steps {
                echo 'Ejecutando tests...'
                sh """
                    docker run --rm -v "\$PWD/${WORKDIR}":/app -w /app ${IMAGE_NAME} \
                    python3 -m unittest discover tests
                """
            }
        }

        stage('Build') {
            steps {
                echo 'Empaquetando aplicaci√≥n...'
                sh """
                    docker run --rm -v "\$PWD/${WORKDIR}":/app -w /app ${IMAGE_NAME} \
                    python3 setup.py sdist
                """
            }
        }
    }

    post {
        always {
            echo 'Pipeline finalizado.'
        }
    }
}

