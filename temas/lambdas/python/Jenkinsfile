pipeline {
    agent none
    stages {
        stage('Build') {
            agent {
                docker {
                    image 'arevalo8/custom-lambdas'
                }
            }
            steps {
                sh 'python -m py_compile temas/lambdas/python/app/procesador.py'
            }
        }
        stage('Test') {
	    agent {
		docker {
		    image 'arevalo8/custom-lambdas'
		}
	    }
	    steps {
		sh '''
		    # Crear directorio para resultados
                    mkdir -p test-reports
                    
                    # Instalar pytest
                    pip install pytest
                    
                    # Configurar PYTHONPATH y ejecutar tests
                    export PYTHONPATH=$(pwd)/temas/lambdas/python/app:$PYTHONPATH
                    python -m pytest --verbose --junit-xml=test-reports/results.xml temas/lambdas/python/tests/test_procesador.py
                    
                    # Verificar que el archivo se cre√≥
                    ls -la test-reports/
		'''
	    }
	    post {
		always {
		    junit 'test-reports/results.xml'
		}
	    }
	}

        stage('Deliver') {
            agent {
                docker { 
                    image 'arevalo8/custom-lambdas'
                }

            }
            steps {
                sh '''
                    pyinstaller --onefile temas/lambdas/python/app/procesador.py
                '''
            }
            post {
                success {
                    sh 'ls -la dist/'
                    archiveArtifacts 'dist/procesador'
                }
            }
        }
    }
}
